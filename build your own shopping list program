import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;

public class ShoppingList {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        List<String> shoppingList = new ArrayList<>();

        for (int i = 0; i < 5; i++) {
            System.out.print("Enter item " + (i + 1) + " (or type 'done' to finish): ");
            String item = scanner.nextLine();
            if (item.equalsIgnoreCase("done")) {
                break;
            }
            shoppingList.add(item);
        }

        System.out.println("\nYour shopping list:");
        System.out.println(String.join(", ", shoppingList));

        int itemCount = shoppingList.size();
        System.out.println("\nYou entered " + itemCount + " items.");

        System.out.print("\nEnter an item to search for: ");
        String searchItem = scanner.nextLine();
        if (shoppingList.contains(searchItem)) {
            System.out.println("\n✅ " + searchItem + " is in your shopping list!");
        } else {
            System.out.println("\n❌ " + searchItem + " is not in your shopping list.");
        }

        scanner.close();
    }
}
